{
    "include": ["src/**/*"],
    "exclude": [
      "node_modules"
    ],
    "compilerOptions": {
      "lib": ["es5", "es6", "esnext.asynciterable"],
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": false,
      "jsx": "react",
      "moduleResolution": "node",
      "strict": true,
      "target": "esnext",
      "resolveJsonModule": true,
      "outDir": "./dist",
      "declaration": true,
      "skipLibCheck": true
    }
  }